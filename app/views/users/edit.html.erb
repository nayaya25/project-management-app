<div class="container">
  <% 
    if current_user &&  current_user.is_admin
  %>
      <%= link_to 'Back', users_index_path, class: 'btn btn-secondary btn-light mb-3' %>
  <%
    else
  %>
      <%= link_to 'Back', projects_url, class: 'btn btn-secondary btn-light mb-3' %>
  <%
    end
  %>
  
</div>
<%= form_with(model: @user, local: true) do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card card-signin my-5">
            <div class="card-body">
              <h5 class="card-title text-center">Edit User</h5>
              <form class="form-signin">
                <div class="form-label-group">
                  <%= f.label :First_name %><br />
                  <%= f.text_field :first_name, autofocus: true, class: "form-control", autocomplete: "firstname" %>
                </div>
                <div class="form-label-group">
                  <%= f.label :Last_name %><br />
                  <%= f.text_field :last_name, autofocus: true, class: "form-control", autocomplete: "lastname" %>
                </div>
                <div class="form-label-group">
                  <%= f.label :Email_Address %><br />
                  <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
                </div>
                <div class="form-label-group">
                  <%= f.label :Is_Admin %><br />
                  <%= f.check_box :is_admin, autocomplete: "is_admin" %>
                </div>
                <div class="text-center">
                  <%= f.submit "Update", class: "btn mt-3 btn-md btn-primary text-center"  %>
                </div>
                <hr class="my-4">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>